<section>
  <h2 class="content__headline">Alle Kategorien</h2>
  <ol class="nolist row">
    {% for item in categories %}
      <li class="col">
        <div class="card">
          <img class="card-img-top" src="https://placeimg.com/498/280/any" alt="">
          <div class="card-body">
            <a class="card-title" href="{{ item.url | url }}">
              {{ item.title }}
            </a>
          </div>
        </div>
      </li>
    {% endfor %}
    </ol>
</section>
