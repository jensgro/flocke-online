<ol class="mygrid mygrid--small">
  {% for post in postslist %}
  <li>
    <div class="card">
      <div class="card__image-cnt">
        <a href="{{ post.url | url }}">
        {%- if post.data.introImage -%}
            <img class="card__image" src="/img/{{ post.data.introImage }}-xs.jpg" alt="">
          {%- else -%}
            <img class="card__image" src="http://dummyimage.com/250x100" alt="">
        {%- endif -%}
        </a>
      </div>
      <div class="card__header">
        <h2 class="card__headline">
          <a href="{{ post.url | url }}">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
        </h2>
      </div>
    </div>
  </li>
  {% endfor %}

</ol>
