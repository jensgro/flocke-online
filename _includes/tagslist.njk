<ol class="indexlist archive-grid">

  {% for post in postslist %}
  <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
    <div class="card">
      <div class="card__image-cnt">
        <a href="{{ post.url | url }}">
          <img class="card__image" src="../../img/{{ post.data.introImage }}-xs.jpg" alt="">
        </a>
      </div>
      <div class="card__header">
        <h3 class="card__headline">
          <a href="{{ post.url | url }}"
            class="postlist-link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
        </h3>
      </div>
    </div>

  </li>
  {% endfor %}

</ol>
