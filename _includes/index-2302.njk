<div class="container">

  {% for item in categories %}
    <div class="category mygrid">
      <div class="category__head">
        <h2>
          {{ item.title }}
        </h2>
        <img class="category__image" src="../img/{{item.headerImage}}_250x100.jpg" alt="" width="250" height="100">
      </div>
      <div class="category__body">
        <h2>In dieser Kategorie</h2>
        <ol class="category__last-items">
        {# Z채hlvariable setzen #}
        {% set atPost = 0 %}
        {% for post in collections.recipesDescending %}
          {% if post.data.category == item.url %}
            {# Solange die Z채hlvariable noch unter diesem Wert ist #}
            {% if atPost < 4 %}
            <li><a href="{{ post.url | url}}">{{ post.data.title }}</a></li>
            {% endif %}
            {# Z채hlvariable hochz채hlen #}
            {% set atPost = atPost + 1 %}
          {% endif %}
        {% endfor %}
        </ol>
        <a class="category__link {{ item.url }}" href="{{ item.title | lower }}">
          &#9654; mehr aus der Kategorie {{ item.title }} ...
        </a>
      </div>
    </div>
  {% endfor %}

</div>
