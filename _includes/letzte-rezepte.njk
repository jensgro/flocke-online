  <section>
    <h2 class="content__headline">Die letzten 4 Rezepte</h2>
    {% set postslist = collections.rezept | head(-4) %}
    {% set postslistCounter = collections.rezept | length %}
      <ol class="nolist mygrid mygrid--4">
      {% for post in postslist %}
        <li>
          <div class="card">
            <div class="card__image-cnt">
              <a href="{{ post.url | url }}">
                <img class="card__image" src="../img/{{post.data.headerImage}}_220x220.jpg" alt="" width="220" height="220">

                <span class="card__title">{{ post.data.title }}</span>
              </a>
            </div>
          </div>
        </li>
      {% endfor %}
      </ol>
  </section>
