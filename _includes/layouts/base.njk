<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/main.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
  </head>
  <body>
    <div class="container">
      <nav class="main-nav">
        {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
        <ul class="nav wrapper">
        {%- for entry in collections.all | eleventyNavigation %}
          <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}"><a href="{{ entry.url | url }}">{{ entry.title }}</a></li>
        {%- endfor %}
        </ul>
      </nav>
    </div>
  <!-- ====== Header -->
      {% if templateClass == "tmpl-home" %}
      <div class="container">
        <header class="home siteheader">
          <h1 class="home-headline">{{ title }}</h1>
          <p class="contentheader__subline">{{ subline }}</p>
        </header>
      </div>
    {% endif %}
    {% if templateClass == "tmpl-tags" %}
      <div class="container">
        <header class="tags siteheader">
          <h1 class="tags-headline">{{ title }}</h1>
        </header>
      </div>
    {% endif %}
    {% if templateClass == "tmpl-post" %}
      <div class="container">
        <header class="post-header siteheader">
          <img
          src="../img/{{ introImage }}-l.jpg"
          srcset="../img/{{ introImage }}-s.jpg 320w,
          ../img/{{ introImage }}-md.jpg 480w,
            ../img/{{ introImage }}-l.jpg 768w
          alt="">
          <h1 class="post-headline">{{ title }}</h1>
       </header>
      </div>
    {% endif %}
    <!-- END ======= Header -->

      {{ content | safe }}

      {% if templateClass != "tmpl-home" %}
      <div class="container">
        <footer class="site__footer">

        </footer>
    </div>
    {% endif %}

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
