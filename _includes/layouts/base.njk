<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/main.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
  </head>
  {% if templateClass == "tmpl-home" %}
  <body class="home">
    {% elif templateClass == "tmpl-recipe" %}
  <body class="recipepage">
  {% else %}
  <body>
  {% endif %}
    <header class="main-nav-wrapper">
      <nav class="container main-nav">
        {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
        <ul class="main-nav__nav">
        {%- for entry in collections.all | eleventyNavigation %}
          <li class="main-nav__item">
            <a  class="main-nav__link{% if entry.url == page.url %} main-nav__link--active{% endif %}"
                href="{{ entry.url | url }}">
                {{ entry.title }}
            </a>
          </li>
        {%- endfor %}
        </ul>
      </nav>
    </header>

      {% include "partials/site-header.njk" %}

      {{ content | safe }}

      {% include "partials/footer.njk" %}

    {% include "partials/footer.njk" %}
  </body>
</html>
