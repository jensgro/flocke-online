<div class="card card--tags">
  <div class="card__header">
    <h2 class="card__headline">Alle Bilder</h2>
  </div>
  <div class="card__body">
    <dl class="imagerights">
    {%- for post in collections.all -%}
      <div class="imagerights_cnt">
        <dd class="imagerights_page"><a href="{{ post.url }}">{{ post.data.title }}</a></dd>
        <dd class="imagerights_img-url">Originalbild: <a href="{{ post.data.headerImageLink }}">{{ post.data.headerImageLink }}</a></dd>
        <dd class="imagerights_img-right">{{ post.data.headerImageAttribution|safe }}</dd>
      </div>
    {%- endfor -%}
    </dl>
  </div>
</div>
