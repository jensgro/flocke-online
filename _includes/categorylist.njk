
  <ol class="nolist mygrid">
  {% for post in postslist %}
    <li>
      <div class="card">
        <div class="card__image-cnt">
          <a href="{{ post.url | url }}">
            <img class="card__image" src="https://placeimg.com/498/280/any" alt="">
            <!-- <img class="card__image" src="https://placeimg.com/640/360/any" alt=""> -->
            <!-- <img class="card__image" src="../img/{{ post.data.introImage }}-xs.jpg" alt=""> -->
          </a>
        </div>
        <div class="card__title">
            <a href="{{ post.url | url }}" class="card__link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
        </div>
      </div>
    </li>
  {% endfor %}
  </ol>

