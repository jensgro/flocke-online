<h2 class="index-headline separator"><span>Hauptgerichte</span></h2>
<div class="overview">
  {% set randomPost = collections.maincourseCollection | getRandom %}
  <div class="overview__highlight">
    <h3 class="overview__highlight-headline">{{randomPost.data.title}}</h3>
    <div class="overview__image">
      <img class="no-print" src="../assets/img/{{randomPost.data.headerImage}}_875x250.jpg" alt="" width="875" height="250">
    </div>
    <div class="overview__highlighttext">
      {% set tNum = 0 %}
      {% for t in randomPost.data.introText %}
      {% if tNum == 0 %}
      <p>{{ t }}</p>
      {% endif %}
      {% set tNum = tNum + 1 %}
      {% endfor %}
      <div class="overview__highlighttags">
        {% for tag in randomPost.data.tags %}
        <span><a href="/{{ tag }}/">{{ tag }}</a></span>
        {% endfor %}
      </div>
      <div><a href="{{ randomPost.url | url}}">zum Rezept</a></div>
    </div>
  </div>
  <div class="overview__shortlist">
      <ul class="list list--shortlist">
        {% set atPost = 0 %}
      {%- for post in collections.maincourseCollection %}
      {%- if atPost < 8 -%}
        <li class="list__item list__item--overview"><a href="{{ post.url | url}}">{{ post.data.title }}</a></li>
        {%- endif -%}
        {# Zählvariable hochzählen #}
        {% set atPost = atPost + 1 %}
      {%- endfor -%}
    </ul>
    <div class="overview__forward">
      <a href="hauptgerichte.html">
        mehr aus der Kategorie <strong>Hauptgerichte</strong> ...</a>
    </div>

  </div>
</div>

