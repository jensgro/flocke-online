{% if tags %}
<div class="container no-print">
  <div class="category">
    <div class="category__head">
      <h2>Tag(s)</h2>
    </div>
    <div class="category__body">
      <ul class="taglist taglist--short">
        {% for tag in tags %}
        {% set tagUrl %}/{{ tag }}/{% endset %}
        <li class="taglist__item">
          <a class="taglist__link" href="{{ tagUrl | url }}">
            {{ tag }}
          </a>
        </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>
{% endif %}
