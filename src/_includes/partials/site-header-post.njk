<header class="container container--bg">
  <h2 class="siteheader__headline">{{ title }}</h2>
  <div class="siteheader siteheader__recipe">
    <picture>
      <source srcset="/assets/img/{{ headerImage }}-7x2.jpg" width="1000" height="286" media="(min-width: 800px)">
        <img class="siteheader__img no-print" src="/assets/img/{{ headerImage }}-16x9.jpg" alt="" width="500" height="281"></picture>
      </div>
      {% if headerImageAttribution %}
        <details class="imageright">
          <summary>Bildnachweis</summary>
          {{ headerImageAttribution| safe }}
          {% if headerImageLink %}
            <a href="{{ headerImageLink }}" style="margin-left: 8px;">(Originalbild)</a>
          {% endif %}
        </details>
      {% endif %}
      {% if introText %}
        <div class="recipe__intro" itemprop="description">
          {% for t in introText %}
            <p>{{ t }}</p>
          {% endfor %}
        </div>
      {% endif %}
      <div class="recipe__tags">
        <ul class="taglist taglist--short">
          {%- for tag in tags -%}
            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
            <li class="taglist__item">
              <a class="taglist__link" href="{{ tagUrl | url }}">
                {{ tag }}
              </a>
            </li>
          {%- endfor -%}
        </ul>
      </div>
    </header>