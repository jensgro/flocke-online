  <nav class="main-nav container no-print">
    <ul class="main-nav__nav">
    {%- for entry in collections.all | eleventyNavigation %}
      <li class="main-nav__item">
        <a  class="main-nav__link{% if entry.url == page.url or entry.key == category %} main-nav__link--active{% endif %}"
            href="{{ entry.url | url }}">
            {{ entry.title }}
        </a>
      </li>
    {%- endfor %}
    </ul>
  </nav>
