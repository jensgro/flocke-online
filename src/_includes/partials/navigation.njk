<header class="container header-cnt">
  <div class="logo-cnt">
    {% if templateClass != "tmpl-home" %}
      <a href="/">
      {% endif %}
      {% include "partials/logo-3.njk" %}
      <h1>{{ metadata.title }}</h1>
      {% if templateClass != "tmpl-home" %}
      </a>
    {% endif %}
  </div>
  <nav class="no-print">
    <ul class="main-navigation">
      {%- for entry in collections.all | eleventyNavigation %}
        <li>
          <a class="main-navigation__link{% if entry.url == page.url or entry.key == category %} main-navigation__link--active{% endif %} main-nav__link--{{ entry.title }}" href="{{ entry.url | url }}">
            {{ entry.title | capitalize }}
          </a>
        </li>
      {%- endfor %}
    </ul>
  </nav>
</header>