---
layout: layouts/base.njk
templateClass: tmpl-recipe
---
<div class="container">
  <main class="recipe" itemscope itemtype="https://schema.org/Recipe">
    {% if introText %}
    <div class="recipe__intro" itemprop="description">
    {% for t in introText %}
      <p>{{ t }}</p>
    {% endfor %}
    </div>
    {% endif %}

    {% if ingredients %}
    <div class="recipe__ingredients">
      <h2>Zutaten</h2>
      <ul>
        {% for i in ingredients %}
        <li itemprop="recipeIngredient">{{ i }}</li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}

    {% if recipe %}
    <div class="recipe__content">
      <h2>Zubereitung</h2>
      <ul>
        {% for r in recipe %}
        <li itemprop="recipeInstructions">{{ r }}</li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}

    {% if tipps %}
    <div class="recipe__tipps">
      <h2>Tipps/Hinweise/Bemerkungen</h2>
      <ul>
        {% for tip in tipps %}
        <li>{{ tip }}</li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}
  </main>
</div>


