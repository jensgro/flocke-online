---
layout: layouts/base.njk
templateClass: tmpl-recipe
---
<div class="container">
  <main class="recipe" itemscope itemtype="https://schema.org/Recipe">
    {% if introText %}
    <div class="recipe__intro" itemprop="description">
    {% for t in introText %}
      <p>{{ t }}</p>
    {% endfor %}
    </div>
    {% endif %}

    {% if ingredients %}
    <div class="recipe__ingredients">
      <h2 class="separator"><span>Zutaten</span></h2>
      <ul class="ingredients-list">
        {% for i in ingredients %}
        <li itemprop="recipeIngredient">{{ i }}</li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}

    {% if recipe %}
    <div class="recipe__content">
      <h2 class="separator"><span>Zubereitung</span></h2>
      <ul class="recipe-instructions">
        {% for r in recipe %}
        <li  class="recipe-instruction" itemprop="recipeInstructions">{{ r }}</li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}

    {% if tipps %}
    <div class="recipe__tipps separator">
      <h2><span>Tipps/Hinweise/Bemerkungen</span></h2>
      <ul>
        {% for tip in tipps %}
        <li>{{ tip }}</li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}
  </main>
</div>


