<div class="container container--bg">

  {% for item in categories %}
    <div class="card {{item.url}}">
      <div class="card__head">
        <h2 class="card__headline">{{ item.title }}</h2>
      </div>
      <div class="card__body">
        <ol class="card__items">
        {# Z채hlvariable setzen #}
        {% set atPost = 0 %}
        {% for post in collections.recipesDescending %}
          {% if post.data.category == item.url %}
            {# Solange die Z채hlvariable noch unter diesem Wert ist #}
            {% if atPost < 8 %}
            <li class="card__item--block"><a href="{{ post.url | url}}">{{ post.data.title }}</a></li>
            {% endif %}
            {# Z채hlvariable hochz채hlen #}
            {% set atPost = atPost + 1 %}
          {% endif %}
        {% endfor %}
        </ol>
        <div class="card__link">
          <a href="{{ item.title | lower }}.html">
            <span class="card__arrow">&#9654;</span> mehr aus der Kategorie <strong>{{ item.title }}</strong> ...</a>
        </div>
      </div>
    </div>
  {% endfor %}

</div>
